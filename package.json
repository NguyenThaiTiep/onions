{
  "name": "onions",
  "packageManager": "yarn@3.2.4",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "sites/*"
    ]
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.0",
    "@types/prettier": "^2",
    "@types/react": "^18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "husky": "^8.0.0",
    "jest": "^29.2.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "lint": "eslint --ext .tsx,.ts --ignore-path .eslintignore --quiet .",
    "ds": "yarn workspace storybook dev",
    "test": "jest",
    "prepare": "husky install",
    "build:packages": "yarn workspaces foreach -ptR --from '@onions/*' run build"
  },
  "dependencies": {
    "react": "^18.2.0"
  }
}
